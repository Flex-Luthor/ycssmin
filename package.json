{
	"name": "cssmin",
	"version": "0.3.2",
	"description": "A simple CSS minifier that uses a port of YUICompressor in JS",
	"main": "cssmin",
    "bin": {
        "cssmin": "./bin/cssmin"
    },
    "devDependencies": {
        "yui-lint": "~0.1.1",
        "jshint": "~0.9.0",
        "istanbul": "https://github.com/gotwarlost/istanbul/tarball/textreport",
        "vows": "*" 
    },
	"author" : {
		"name" : "Johan Bleuzen",
		"url" : "http://blog.johanbleuzen.fr"
	},
    "contributors": [
        { "name": "Dav Glass", "email": "davglass@gmail.com" }
    ],
    "scripts": {
        "pretest": "jshint --config ./node_modules/yui-lint/jshint.json cssmin.js package.json",
        "test": "istanbul cover --console both -- vows --spec ./tests/*.js"
    },
    "repository" : {
        "type" : "git",
        "url"  : "http://github.com/jbleuzen/node-cssmin"
    }
}
